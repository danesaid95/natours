extends baseEmail

block content
    p Hi #{firstName},
    p Forgot your password?
    p Submit a PATCH request with your new password and confirm password  
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') click here
    p if you didn't forget your password please ignore this email!

